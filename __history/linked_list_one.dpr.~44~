program linked_list_one;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type
  Adr = ^Zveno;
  Zveno = Record
      Element: Char;
      SuccAdr: Adr;
  End;

var MainAdr, CurrAdr: Adr;
Simv: char;
begin
  New(MainAdr);
  MainAdr^.Element:= 'a';
  CurrAdr:= MainAdr;
  CurrAdr^.SuccAdr:= nil;
  Readln(Simv);
  while Simv <> '.' do begin
    New(CurrAdr^.AdrCled);
    CurrAdr:= CurrAdr^.AdrCled;
    CurrAdr^.Element:= Simv;
    CurrAdr^.AdrCled:= nil;
    readln(simv);
  end;

  CurrAdr:= MainAdr;
  while CurrAdr^.AdrCled <> nil do begin
    write(CurrAdr^.Element);
    CurrAdr:= CurrAdr^.AdrCled;
  end;

  readln;
  
end.
